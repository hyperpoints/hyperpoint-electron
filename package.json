{
  "name": "hyperpoint",
  "version": "1.0.0",
  "description": "hyperpoint",
  "main": "app.js",
  "scripts": {
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "postinstall": "install-app-deps",
    "mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --icon=build/hyperpoint.icns --prune=true --out=mac-builds",
    "windows": "electron-packager . --overwrite --platform=win32 --arch=ia32 --icon=build/hyperpoint_1024x1024.ico --prune=true --out=windows-builds",
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "electron .",
    "dev": "nodemon --watch * --exec 'npm run start'"
  },
  "repository": {
    "type": "git",
    "url": "hyperpoints"
  },
  "author": "hyperpoints",
  "license": "GPL-2.0-or-later",
  "devDependencies": {
    "electron": "^9.3.2",
    "electron-builder": "^22.9.1"
  },
  "dependencies": {
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron-context-menu": "^2.3.0",
    "electron-packager": "^15.1.0",
    "electron-unhandled": "^3.0.2",
    "serve": "^11.3.2",
    "wait-on": "^5.2.0"
  },
  "build": {
    "productName": "hyperpoint",
    "appId": "com.hyperpoint.app",
    "mac": {
      "icon": "./build/hyperpoint.icns",
      "category": "public.app-category.utilities"
    }
  }
}
